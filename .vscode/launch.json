// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/test-fixtures/test-fixtures.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/src/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Run Bundled Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--force-node-api-uncaught-exceptions-policy=true"
			], 
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
         "preLaunchTask": "set-main-src"
		},
		{
			"name": "Run Extension & Watch",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--force-node-api-uncaught-exceptions-policy=true"
			],
			"outFiles": [
				"${workspaceFolder}/src/**/*.js"
			],
         "preLaunchTask": "set-main-src and Watch"
		},{
			"name": "Run Bundled Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/dist",
				"--force-node-api-uncaught-exceptions-policy=true"
			],
			"outFiles": [
				 "${workspaceFolder}/dist/**/*.js"  // Point to the bundled JS files
			],
			"preLaunchTask": "set-main-dist"
		},
		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
			"args": [
				"--runInBand",
				"--watchAll=false",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	]
}
