// A launch configuration that launches the extension inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/test-fixtures/test-fixtures.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/src/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Run Bundled Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--force-node-api-uncaught-exceptions-policy=true"
			], 
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
         "preLaunchTask": "set-main-src"
		},
		{
			"name": "Run Extension & Watch",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--force-node-api-uncaught-exceptions-policy=true"
			],
			"outFiles": [
				"${workspaceFolder}/src/**/*.js"
			],
         "preLaunchTask": "set-main-src and Watch"
		},
		{
			"name": "Run Bundled Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/dist",
				"--force-node-api-uncaught-exceptions-policy=true"
			],
			"outFiles": [
				 "${workspaceFolder}/dist/**/*.js"  // Point to the bundled JS files
			],
			"preLaunchTask": "set-main-dist"
		},
		{
			"name": "Debug Jest Tests",
			"type": "node",
			"request": "launch",
			"program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
			"args": [
				"--runInBand",
				"--watchAll=false",
			],
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"name": "Debug VS Code Tests using CLI",
			"type": "node",
			"request": "launch",
			// main file of the @vscode/test-cli package: entry point for running the VS Code tests using the CLI approach
			"program": "${workspaceFolder}/node_modules/@vscode/test-cli/out/index.js",
			// skip downloading VS Code before running tests, assuming it's already been downloaded once
			"args": ["--no-install"], 
			// use VS Code's integrated terminal for output instead of the debug console
			// this is useful for running tests that require user input
			// e.g. tests that use the `vscode.window.showInputBox` API
			// or tests that require a terminal to be opened
			// e.g. tests that use the `vscode.window.createTerminal` API
			// It also provides nicely formatted, colorized test results;
			// handles large volumes of text more efficiently,
			// keeps output visible and scrollable even after the debugging session ends,
			// separate test results from other debugging information.
			// This is particularly beneficial because the @vscode/test-cli tool produces rich,
			// formatted output about test discovery, VS Code instance launching, extension loading,
			// and test execution results.
			"console": "integratedTerminal",
			// prevent the Debug Console from automatically opening when debugging starts
			"internalConsoleOptions": "neverOpen"
		}
	]
}
